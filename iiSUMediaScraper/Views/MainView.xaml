<Page x:Class="iiSUMediaScraper.Views.MainView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:media="using:CommunityToolkit.WinUI.Media"
      xmlns:ui="using:CommunityToolkit.WinUI"
      xmlns:controls="using:CommunityToolkit.WinUI.Controls"
      xmlns:configurationmodels="using:iiSUMediaScraper.Models.Configurations"
      xmlns:configurationviewmodels="using:iiSUMediaScraper.ViewModels.Configurations"
      xmlns:controls1="using:iiSUMediaScraper.Controls"
      xmlns:converters="using:CommunityToolkit.WinUI.Converters"
      xmlns:customconverters="using:iiSUMediaScraper.Converters"
      xmlns:views="using:iiSUMediaScraper.Views"
      xmlns:viewmodels="using:iiSUMediaScraper.ViewModels"
      xmlns:triggers="using:CommunityToolkit.WinUI"
      xmlns:datatemplateselectors="using:iiSUMediaScraper.DataTemplateSelectors"
      xmlns:configurationviews="using:iiSUMediaScraper.Views.Configurations"
      xmlns:animations="using:CommunityToolkit.WinUI.Animations"
      Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
      mc:Ignorable="d">

    <Page.Resources>
        <media:AttachedCardShadow x:Key="CommonShadow"
                                  Offset="0"
                                  BlurRadius="16"
                                  CornerRadius="16" />

        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <customconverters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />

        <customconverters:BoolToThicknessConverter x:Key="BoolToThicknessConverter"
                                                   TrueValue="12,12,12,6"
                                                   FalseValue="6,0" />

        <DataTemplate x:Key="PlatformMenuItemViewTemplate"
                      x:DataType="viewmodels:PlatformViewModel">
            <NavigationViewItem Padding="0,8">
                <views:PlatformMenuItemView ViewModel="{x:Bind Mode=OneWay}"
                                            Padding="0,8" />
            </NavigationViewItem>
        </DataTemplate>
    </Page.Resources>

    <Grid x:Name="ContentArea">
        <TextBlock Text="iiSU Media Scraper"
                   Margin="58,10,0,0"
                   FontSize="20"
                   VerticalAlignment="Top" />
        <NavigationView x:Name="NavigationViewRoot"
                        MenuItemsSource="{x:Bind ViewModel.Platforms, Mode=OneWay}"
                        SelectedItem="{x:Bind ViewModel.SelectedPlatform, Mode=TwoWay}"
                        MenuItemTemplate="{StaticResource PlatformMenuItemViewTemplate}"
                        IsSettingsVisible="False"
                        IsBackButtonVisible="Collapsed">
            <NavigationView.PaneCustomContent>
                <StackPanel Margin="4">
                </StackPanel>
            </NavigationView.PaneCustomContent>
            <NavigationView.PaneFooter>
                <Grid>
                    <Button Padding="6"
                            Command="{x:Bind ViewModel.ShowConfigurationCommand, Mode=OneWay}"
                            Margin="{Binding ElementName=NavigationViewRoot, Path=IsPaneOpen, Converter={StaticResource BoolToThicknessConverter}}">
                        <SymbolIcon Symbol="Setting" />
                    </Button>
                    <Border Visibility="{Binding ElementName=NavigationViewRoot, Path=IsPaneOpen, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Button Padding="6"
                                Margin="{Binding ElementName=NavigationViewRoot, Path=IsPaneOpen, Converter={StaticResource BoolToThicknessConverter}}"
                                HorizontalAlignment="Right"
                                Command="{x:Bind ViewModel.StageApplyCommand, Mode=OneWay}"
                                Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <SymbolIcon Symbol="Save" />
                        </Button>
                    </Border>
                </Grid>
            </NavigationView.PaneFooter>
            <views:PlatformView ViewModel="{x:Bind ViewModel.SelectedPlatform, Mode=OneWay}" />
        </NavigationView>
        <Border Visibility="{x:Bind ViewModel.IsShowingConfiguration, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border.Background>
                <media:BackdropBlurBrush Amount="5.0" />
            </Border.Background>
            <Border Background="{ThemeResource SmokeFillColorDefaultBrush}">
                <Border ui:Effects.Shadow="{StaticResource CommonShadow}"
                        ui:VisualExtensions.NormalizedCenterPoint="0.5"
                        MaxWidth="1200"
                        Margin="64">
                    <animations:Implicit.ShowAnimations>
                        <animations:OpacityAnimation Duration="0:0:0.1" From="0" To="1"/>
                        <animations:ScaleAnimation Duration="0:0:0.15" Delay="0:0:0.3" From="1.05" To="1"/>
                    </animations:Implicit.ShowAnimations>
                    <animations:Implicit.HideAnimations>
                        <animations:ScaleAnimation Duration="0:0:0.1" From="1" To="1.05"/>
                        <animations:OpacityAnimation Duration="0:0:0.1" Delay="0:0:0.3" From="1" To="0"/>
                    </animations:Implicit.HideAnimations>
                    <Grid Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                          CornerRadius="16"
                          Padding="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid Margin="0,0,0,32">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Configuration"
                                       FontSize="32" />
                        </Grid>
                        <configurationviews:ConfigurationView Grid.Row="1"
                                                              ViewModel="{x:Bind ViewModel.Configuration, Mode=OneWay}" />
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <Button Content="Dismiss"
                                    Visibility="{x:Bind ViewModel.HasBegun, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                    Command="{x:Bind ViewModel.HideConfigurationCommand, Mode=OneWay}" />
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal">
                                <Button Content="Save Configuration"
                                        Margin="0,0,16,0"
                                        Command="{x:Bind ViewModel.SaveConfigurationCommand, Mode=OneWay}" />
                                <Button Style="{ThemeResource AccentButtonStyle}"
                                        Content="Begin"
                                        Command="{x:Bind ViewModel.BeginCommand, Mode=OneWay}" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Border>
        </Border>
        <Border Visibility="{x:Bind ViewModel.IsShowingApplyConfiguration, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border.Background>
                <media:BackdropBlurBrush Amount="5.0" />
            </Border.Background>
            <Border Background="{ThemeResource SmokeFillColorDefaultBrush}">
                <Border ui:Effects.Shadow="{StaticResource CommonShadow}"
                        ui:VisualExtensions.NormalizedCenterPoint="0.5"
                        Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                        CornerRadius="16"
                        MaxWidth="720"
                        MaxHeight="720"
                        Margin="64"
                        Padding="16">
                    <animations:Implicit.ShowAnimations>
                        <animations:OpacityAnimation Duration="0:0:0.1" From="0" To="1"/>
                        <animations:ScaleAnimation Duration="0:0:0.15" Delay="0:0:0.3" From="1.05" To="1"/>
                    </animations:Implicit.ShowAnimations>
                    <animations:Implicit.HideAnimations>
                        <animations:ScaleAnimation Duration="0:0:0.1" From="1" To="1.05"/>
                        <animations:OpacityAnimation Duration="0:0:0.1" Delay="0:0:0.3" From="1" To="0"/>
                    </animations:Implicit.HideAnimations>
                    <views:ApplyView ViewModel="{x:Bind ViewModel, Mode=OneWay}" />
                </Border>
            </Border>
        </Border>
        <Border Visibility="{x:Bind ViewModel.SelectedPlatform.IsEditingImage, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue='Collapsed'}">
            <Border.Background>
                <media:BackdropBlurBrush Amount="5.0" />
            </Border.Background>
            <Border ui:Effects.Shadow="{StaticResource CommonShadow}"
                    ui:VisualExtensions.NormalizedCenterPoint="0.5"
                    Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultSolid}"
                    BorderThickness="1"
                    CornerRadius="16"
                    MaxWidth="1200"
                    MaxHeight="800"
                    Margin="64">
                <animations:Implicit.ShowAnimations>
                    <animations:OpacityAnimation Duration="0:0:0.1" From="0" To="1"/>
                    <animations:ScaleAnimation Duration="0:0:0.15" Delay="0:0:0.3" From="1.05" To="1"/>
                </animations:Implicit.ShowAnimations>
                <animations:Implicit.HideAnimations>
                    <animations:ScaleAnimation Duration="0:0:0.1" From="1" To="1.05"/>
                    <animations:OpacityAnimation Duration="0:0:0.1" Delay="0:0:0.3" From="1" To="0"/>
                </animations:Implicit.HideAnimations>
                <Grid Background="{ThemeResource LayerFillColorAltBrush}"
                      Padding="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <controls:ImageCropper x:Name="ImageCropper"
                                           Margin="0,0,0,16"
                                           CornerRadius="8"
                                           AspectRatio="{x:Bind ViewModel.SelectedPlatform.EditImage.AspectRatio, Mode=OneWay}"
                                           Visibility="{x:Bind ViewModel.SelectedPlatform.IsEditingImage, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                    <InfoBar Severity="Error"
                             Message="Error during upscaling"
                             IsOpen="{x:Bind ViewModel.SelectedPlatform.EditImage.HasUpscaleError}"
                             IsClosable="False"
                             VerticalAlignment="Bottom"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,16"
                             Grid.Row="1" />
                    <Border Visibility="{x:Bind ViewModel.SelectedPlatform.EditImage.IsUpscaling, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue='Collapsed'}"
                            Grid.Row="1">
                        <Border.Background>
                            <media:BackdropBlurBrush Amount="5.0" />
                        </Border.Background>
                        <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                            <ProgressRing IsIndeterminate="True"
                                          Height="60"
                                          Width="60"
                                          Margin="0,0,0,16" />
                            <TextBlock Text="Upscaling" />
                        </StackPanel>
                    </Border>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <Button Height="38"
                                Command="{x:Bind ViewModel.SelectedPlatform.StopEditCommand, Mode=OneWay}" 
                                Content="Cancel"/>
                        <StackPanel Orientation="Horizontal"
                                    Grid.Column="1">
                            <SplitButton Margin="0,0,16,0"
                                         Height="38"
                                         Padding="6"
                                         ToolTipService.ToolTip="Upscale with default configuration"
                                         Command="{x:Bind ViewModel.SelectedPlatform.EditImage.UpscaleCommand, Mode=OneWay}"
                                         CommandParameter="{x:Bind ViewModel.Configuration.SelectedUpscalerConfiguration, Mode=OneWay}">
                                <SymbolIcon Symbol="Upload" />
                                <SplitButton.Flyout>
                                    <Flyout Placement="Bottom">
                                        <ItemsRepeater ItemsSource="{x:Bind ViewModel.SelectedPlatform.ImageUpscaleConfigurations, Mode=OneWay}">
                                            <ItemsRepeater.ItemTemplate>
                                                <DataTemplate x:DataType="viewmodels:ImageUpscaleConfigurationViewModel">
                                                    <MenuFlyoutItem Text="{x:Bind UpscalerConfigurationViewModel.Name, Mode=OneWay}"
                                                                    Command="{x:Bind UpscaleCommand, Mode=OneWay}" />
                                                </DataTemplate>
                                            </ItemsRepeater.ItemTemplate>
                                        </ItemsRepeater>
                                    </Flyout>
                                </SplitButton.Flyout>
                            </SplitButton>
                            <Button Height="38"
                                    Width="38"
                                    Padding="6"
                                    Grid.Column="1"
                                    Click="ButtonSave_Click">
                                <SymbolIcon Symbol="Save" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Page>

<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="iiSUMediaScraper.Views.ImageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:iiSUMediaScraper.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:media="using:CommunityToolkit.WinUI.Media"
             xmlns:ui="using:CommunityToolkit.WinUI"
             xmlns:controls="using:CommunityToolkit.WinUI.Controls"
             xmlns:configurationmodels="using:iiSUMediaScraper.Models.Configurations"
             xmlns:configurationviewmodels="using:iiSUMediaScraper.ViewModels.Configurations"
             xmlns:controls1="using:iiSUMediaScraper.Controls"
             xmlns:converters="using:CommunityToolkit.WinUI.Converters"
             xmlns:customconverters="using:iiSUMediaScraper.Converters"
             xmlns:datatemplateselectors="using:iiSUMediaScraper.DataTemplateSelectors"
             xmlns:viewmodels="using:iiSUMediaScraper.ViewModels"
             mc:Ignorable="d">

    <UserControl.Resources>
        <media:AttachedCardShadow x:Key="CommonShadow"
                                  Offset="0,2"
                                  BlurRadius="12"
                                  Opacity=".3"
                                  CornerRadius="8" />

        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <customconverters:PathToValidImagePathConverter x:Key="PathToValidImagePathConverter" />

        <customconverters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />

        <customconverters:BoolToIntegerConverter x:Key="BoolToIntegerConverter"
                                                 FalseValue="0"
                                                 TrueValue="2" />

        <customconverters:BoolToThicknessConverter x:Key="BoolToThicknessConverter"
                                                   FalseValue="0"
                                                   TrueValue="2" />
    </UserControl.Resources>

    <Grid Background="{ThemeResource LayerFillColorAltBrush}"
          BorderBrush="{ThemeResource SystemFillColorAttentionBrush}"
          BorderThickness="{x:Bind ViewModel.IsSelected, Mode=OneWay, Converter={StaticResource BoolToThicknessConverter}}"
          Padding="4"
          CornerRadius="4"
          Tapped="Grid_Tapped"
          PointerEntered="Grid_PointerEntered"
          PointerExited="Grid_PointerExited">
        <controls1:CropPreview Stretch="Uniform"
                               Height="140"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               HasCrop="{x:Bind ViewModel.HasCrop, Mode=OneWay}"
                               CropTop="{x:Bind ViewModel.Crop.Top, Mode=OneWay}"
                               CropLeft="{x:Bind ViewModel.Crop.Left, Mode=OneWay}"
                               CropWidth="{x:Bind ViewModel.Crop.Width, Mode=OneWay}"
                               CropHeight="{x:Bind ViewModel.Crop.Height, Mode=OneWay}"
                               Source="{x:Bind ViewModel.Bytes, Mode=OneWay, Converter={StaticResource PathToValidImagePathConverter}}" />
        <controls:Shimmer Height="140"
                          Width="{x:Bind CalculateScaledWidth(ViewModel.Width, ViewModel.Height), Mode=OneWay}" 
                          Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
        <Border HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <Button Padding="6"
                    Height="32"
                    Width="32"
                    Tapped="ButtonEdit_Tapped"
                    Visibility="{x:Bind ViewModel.IsHovering, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                    Command="{x:Bind ViewModel.RequestEditCommand, Mode=OneWay}">
                <Viewbox>
                    <SymbolIcon Symbol="Edit" />
                </Viewbox>
            </Button>
        </Border>
        <Border Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                BorderBrush="{ThemeResource SystemFillColorAttentionBrush}"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                CornerRadius="4"
                Padding="4"
                Visibility="{x:Bind ViewModel.IsHovering, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="{x:Bind ViewModel.Source, Mode=OneWay}"
                       FontSize="12"/>
        </Border>
    </Grid>
</UserControl>

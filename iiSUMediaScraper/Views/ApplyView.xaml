<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="iiSUMediaScraper.Views.ApplyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:iiSUMediaScraper.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:customconverters="using:iiSUMediaScraper.Converters"
             xmlns:converters="using:CommunityToolkit.WinUI.Converters"
             xmlns:imageex="using:ImageEx"
             mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <customconverters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />

        <customconverters:PathToValidImagePathConverter x:Key="PathToValidImagePathConverter" />
    </UserControl.Resources>

    <Grid Background="{x:Bind Background}"
          CornerRadius="{x:Bind CornerRadius}"
          Padding="{x:Bind Padding}">
        <Grid Visibility="{x:Bind ViewModel.IsApplying, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <StackPanel Margin="16">
                <TextBlock Text="Applying"
                           FontSize="22" />
                <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           FontSize="18">
                                    <Run Text="{x:Bind ViewModel.ApplyingGames.Count, Mode=OneWay}" /> <Run Text="games" />
                </TextBlock>
            </StackPanel>
            <StackPanel Grid.Row="1"
                        Margin="16"
                        Background="{ThemeResource LayerFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        Padding="16"
                        CornerRadius="4">
                <ToggleSwitch OffContent="Move Unfound Games"
                              OnContent="Move Unfound Games"
                              Margin="0,0,0,8"
                              ToolTipService.ToolTip="If media was missing the game will be moved"
                              IsOn="{x:Bind ViewModel.Configuration.IsMoveToUnfoundGamesFolder, Mode=TwoWay}" />
                <ToggleSwitch OffContent="Apply Unfound Games"
                              OnContent="Apply Unfound Games"
                              Margin="0,0,0,8"
                              IsOn="{x:Bind ViewModel.Configuration.IsApplyUnfoundGames, Mode=TwoWay}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <TextBox Text="{x:Bind ViewModel.Configuration.IconNameFormat, Mode=TwoWay}"
                             Header="Icon Name Format"
                             Margin="0,0,32,16"
                             MinWidth="200" />
                    <ToggleSwitch OffContent="Apply Icon"
                                  OnContent="Apply Icon"
                                  Margin="0,16,0,0"
                                  Grid.Column="1"
                                  VerticalAlignment="Center"
                                  IsOn="{x:Bind ViewModel.Configuration.IsApplyIcon, Mode=TwoWay}" />
                    <TextBox Text="{x:Bind ViewModel.Configuration.TitleNameFormat, Mode=TwoWay}"
                             Header="Title Name Format"
                             Margin="0,0,32,16"
                             Grid.Row="1"
                             MinWidth="200" />
                    <ToggleSwitch OffContent="Apply Title"
                                  OnContent="Apply Title"
                                  Margin="0,16,0,8"
                                  Grid.Row="1"
                                  Grid.Column="1"
                                  IsOn="{x:Bind ViewModel.Configuration.IsApplyTitle, Mode=TwoWay}" />
                    <TextBox Text="{x:Bind ViewModel.Configuration.HeroNameFormat, Mode=TwoWay}"
                             Header="Hero Name Format"
                             Margin="0,0,32,16"
                             Grid.Row="2"
                             MinWidth="200" />
                    <ToggleSwitch OffContent="Apply Heros"
                                  OnContent="Apply Heros"
                                  Margin="0,16,0,8"
                                  Grid.Row="2"
                                  Grid.Column="1"
                                  IsOn="{x:Bind ViewModel.Configuration.IsApplyHeros, Mode=TwoWay}" />
                    <TextBox Text="{x:Bind ViewModel.Configuration.SlideNameFormat, Mode=TwoWay}"
                             Header="Slide Name Format"
                             Margin="0,0,32,16"
                             Grid.Row="3"
                             MinWidth="200" />
                    <ToggleSwitch OffContent="Apply Slides"
                                  OnContent="Apply Slides"
                                  Margin="0,16,0,8"
                                  Grid.Row="3"
                                  Grid.Column="1"
                                  IsOn="{x:Bind ViewModel.Configuration.IsApplySlides, Mode=TwoWay}" />
                    <TextBox Text="{x:Bind ViewModel.Configuration.MusicNameFormat, Mode=TwoWay}"
                             Header="Music Name Format"
                             Margin="0,0,32,16"
                             Grid.Row="4"
                             MinWidth="200" />
                    <ToggleSwitch OffContent="Apply Music"
                                  OnContent="Apply Music"
                                  Margin="0,16,0,8"
                                  Grid.Row="4"
                                  Grid.Column="1"
                                  IsOn="{x:Bind ViewModel.Configuration.IsApplyMusic, Mode=TwoWay}" />
                </Grid>
            </StackPanel>
            <InfoBar Severity="Success"
                     Message="Games Applied Successfully!"
                     IsOpen="True"
                     IsClosable="False"
                     Grid.Row="2"
                     Margin="16,0,16,16"
                     Visibility="{x:Bind ViewModel.IsApplyingFinished, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
            <Button Grid.Row="3"
                    Content="Cancel"
                    Margin="16,0,16,16"
                    HorizontalAlignment="Left"
                    Command="{x:Bind ViewModel.HideApplyConfigurationCommand, Mode=OneWay}" />
            <Button Grid.Row="3"
                    Style="{ThemeResource AccentButtonStyle}"
                    Content="Begin"
                    Margin="0,0,16,16"
                    HorizontalAlignment="Right"
                    Command="{x:Bind ViewModel.ApplyCommand, Mode=OneWay}" />
        </Grid>
        <Grid Visibility="{x:Bind ViewModel.IsApplying, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <Grid Margin="0,0,0,32">
                    <ProgressRing Height="400"
                                  Width="400"
                                  IsIndeterminate="False"
                                  Value="{x:Bind ViewModel.ApplyingProgress, Mode=OneWay}" />
                    <imageex:ImageEx Source="{x:Bind ViewModel.ApplyingGame.DemoModeIcon.LocalPath, Mode=OneWay, Converter={StaticResource PathToValidImagePathConverter}}"
                                     Height="180"
                                     Width="180"
                                     Stretch="Fill"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center" />
                </Grid>
                <TextBlock HorizontalAlignment="Center"
                           FontSize="20">
                                    <Run Text="Applying" /> <Run Text="{x:Bind ViewModel.ApplyingGame.Name, Mode=OneWay}" />
                </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
